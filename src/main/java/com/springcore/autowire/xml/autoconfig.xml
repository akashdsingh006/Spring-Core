<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:p="http://www.springframework.org/schema/p"
xsi:schemaLocation="http://www.springframework.org/schema/beans

http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!--  ____Autowiring byName______
	<bean class="com.springcore.autowire.xml.Address" name="address" p:street="Camac Street" p:city="Kolkata"/>
	
	<bean class="com.springcore.autowire.xml.Employee" name="emp" autowire="byName" />
		 -->
	
	
	<!-- __________Autowiring byType_______________
	<bean class="com.springcore.autowire.xml.Address" name="address1" p:street="Camac Street" p:city="Kolkata"/>
	
	<bean class="com.springcore.autowire.xml.Employee" name="emp" autowire="byType" />
	 -->
	 
	 <!-- Autowiring using constructor -->
	 <bean class="com.springcore.autowire.xml.Address" name="address" p:street="Camac Street" p:city="Kolkata"/>
	
	<bean class="com.springcore.autowire.xml.Employee" name="emp" autowire="constructor" />
</beans>